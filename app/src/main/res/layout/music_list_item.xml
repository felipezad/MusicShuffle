<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:contentDescription="@string/music_artwork"
            android:id="@+id/imageViewMusicArtWork"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"/>

    <TextView
            android:id="@+id/textViewMusicName"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewMusicArtWork"
            app:layout_constraintStart_toEndOf="@+id/imageViewMusicArtWork"
            app:layout_constraintTop_toTopOf="@+id/imageViewMusicArtWork"
            app:layout_constraintVertical_bias="0.25"
            style="@style/MusicName"
            tools:background="@android:color/holo_green_dark"
            tools:text="textViewMusicName"/>

    <TextView
            android:id="@+id/textViewMusicArtist"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textViewMusicName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textViewMusicName"
            app:layout_constraintTop_toBottomOf="@+id/textViewMusicName"
            style="@style/MusicArtist"
            tools:background="@android:color/holo_red_dark" tools:text="textViewMusicArtist"/>

</androidx.constraintlayout.widget.ConstraintLayout>